{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src", "Traducciones/TradResetPAss.js", "Traducciones/TradRegister.js", "Traducciones/TradLogin.js", "Traducciones/TradHome.js", "Traducciones/TradProfileAvatar.js", "Traducciones/TradAdminHome.js", "Traducciones/TradAdminAdd.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
